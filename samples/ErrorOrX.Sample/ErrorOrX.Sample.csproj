<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <RootNamespace>ErrorOrX.Sample</RootNamespace>
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
        <CompilerGeneratedFilesOutputPath>$(BaseIntermediateOutputPath)\GeneratedFiles</CompilerGeneratedFilesOutputPath>
        <!-- Use app's AppJsonSerializerContext instead of auto-generated -->
        <ErrorOrGenerateJsonContext>false</ErrorOrGenerateJsonContext>
    </PropertyGroup>

    <ItemGroup>
        <CompilerVisibleProperty Include="ErrorOrGenerateJsonContext"/>
    </ItemGroup>

    <ItemGroup>
        <!-- Single global using for all ErrorOr types -->
        <Using Include="ErrorOr"/>
        <Using Include="ErrorOrX.Sample"/>
        <Using Include="ErrorOrX.Sample.Domain"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.OpenApi"/>
        <PackageReference Include="ANcpLua.Roslyn.Utilities" GeneratePathProperty="true" PrivateAssets="all"/>
    </ItemGroup>

    <ItemGroup>
        <!-- ErrorOrX runtime (net10.0) -->
        <ProjectReference Include="../../src/ErrorOrX/ErrorOrX.csproj"/>
        <!-- ErrorOrX.Generators (netstandard2.0) as analyzer -->
        <ProjectReference Include="../../src/ErrorOrX.Generators/ErrorOrX.Generators.csproj"
                          OutputItemType="Analyzer"
                          ReferenceOutputAssembly="false"/>
        <!-- Generator's runtime dependency -->
        <Analyzer Include="$(PkgANcpLua_Roslyn_Utilities)/lib/netstandard2.0/ANcpLua.Roslyn.Utilities.dll"/>
    </ItemGroup>

</Project>
