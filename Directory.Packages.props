    <PackageVersion Include="Microsoft.Sbom.Targets" Version="4.0.2" />
    <PackageVersion Include="JonSkeet.RoslynAnalyzers" Version="1.0.0-beta.6" />
    <PackageVersion Include="ErrorProne.NET.CoreAnalyzers" Version="0.6.1-beta.1" />
