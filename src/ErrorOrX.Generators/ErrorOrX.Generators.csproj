<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <PackageId>ErrorOrX.Generators</PackageId>
        <Description>Source generator for ASP.NET Core Minimal API integration with ErrorOrX. Auto-generates MapErrorOrEndpoints() with typed Results, OpenAPI metadata, and middleware attribute support.</Description>
        <PackageTags>ErrorOr;SourceGenerator;MinimalAPI;ASP.NET;Roslyn;CodeGen</PackageTags>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <IsPackable>true</IsPackable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <LangVersion>latest</LangVersion>

        <!-- Generator packaging configuration -->
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <IsRoslynComponent>true</IsRoslynComponent>
        <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
        <DevelopmentDependency>true</DevelopmentDependency>
        <NoWarn>$(NoWarn);NU5128</NoWarn>

        <!-- Source Link -->
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <IncludeSymbols>false</IncludeSymbols>
    </PropertyGroup>

    <!-- ═══════════════════════════════════════════════════════════════════════════
         ANALYZER RELEASE TRACKING (for RS2008)
         ═══════════════════════════════════════════════════════════════════════════ -->
    <ItemGroup>
        <AdditionalFiles Include="AnalyzerReleases.Shipped.md"/>
        <AdditionalFiles Include="AnalyzerReleases.Unshipped.md"/>
    </ItemGroup>

    <!-- ═══════════════════════════════════════════════════════════════════════════
         PACKAGE DEPENDENCY: ErrorOrX runtime flows to consumers
         ReferenceOutputAssembly=false → No compile-time reference (TFM incompatible)
         PrivateAssets=none → Dependency appears in nupkg for consumers
         ═══════════════════════════════════════════════════════════════════════════ -->
    <ItemGroup>
        <ProjectReference Include="../ErrorOrX/ErrorOrX.csproj"
                          ReferenceOutputAssembly="false"
                          SkipGetTargetFrameworkProperties="true"
                          PrivateAssets="none"/>
    </ItemGroup>

    <!-- ═══════════════════════════════════════════════════════════════════════════
         GENERATOR DEPENDENCIES (bundled, not exposed to consumers)
         ═══════════════════════════════════════════════════════════════════════════ -->
    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" PrivateAssets="all"/>
        <PackageReference Include="ANcpLua.Roslyn.Utilities" PrivateAssets="all" GeneratePathProperty="true"/>
        <!-- PolySharp removed - using Polyfills.cs to avoid type conflicts with test projects -->
    </ItemGroup>

    <!-- ═══════════════════════════════════════════════════════════════════════════
         CODE QUALITY ANALYZERS (not using ANcpLua.NET.Sdk, so explicit version)
         ═══════════════════════════════════════════════════════════════════════════ -->
    <ItemGroup>
        <PackageReference Include="ANcpLua.Analyzers" PrivateAssets="all" VersionOverride="1.10.2"/>
    </ItemGroup>

    <!-- Expose dependencies to projects referencing this generator via ProjectReference -->
    <PropertyGroup>
        <GetTargetPathDependsOn>$(GetTargetPathDependsOn);GetDependencyTargetPaths</GetTargetPathDependsOn>
    </PropertyGroup>

    <Target Name="GetDependencyTargetPaths">
        <ItemGroup>
            <TargetPathWithTargetPlatformMoniker Include="$(PkgANcpLua_Roslyn_Utilities)/lib/netstandard2.0/ANcpLua.Roslyn.Utilities.dll" IncludeRuntimeDependency="false"/>
        </ItemGroup>
    </Target>

    <ItemGroup>
        <PackageReference Include="Microsoft.SourceLink.GitHub" PrivateAssets="all"/>
    </ItemGroup>

    <!-- Add ErrorOrX as a package dependency that flows to consumers -->
    <PropertyGroup>
        <NuspecFile>ErrorOrX.Generators.nuspec</NuspecFile>
        <NuspecBasePath>$(MSBuildProjectDirectory)</NuspecBasePath>
        <NuspecProperties>version=$(Version);nugetRoot=$(NuGetPackageRoot);roslynUtilsVersion=$(ANcpLuaRoslynUtilitiesVersion)</NuspecProperties>
    </PropertyGroup>
</Project>
